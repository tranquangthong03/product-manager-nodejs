mixin searchForm(keyword)
  form#formSearch.search-form
    .input-group.input-group-sm
      .input-group-prepend
        span.input-group-text
          i.fas.fa-search
      input.form-control(
        type="text"
        placeholder="Nhập từ khóa tìm kiếm..."
        id="searchInput"
        name="keyword"
        value=keyword
      )
      .input-group-append
        button.btn.btn-success(type="submit", id="searchBtn")
          i.fas.fa-search.mr-1
          | Tìm